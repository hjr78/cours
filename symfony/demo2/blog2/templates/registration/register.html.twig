{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        <div class="row">
            <div class="col-md-4">
                <label for="validationCustom01" class="form-label">First name</label>
               
                {{ form_row(registrationForm.firstname,{'attr': {'class': 'form-control','placeholder':'Saisir votre nom'}}) }}
            </div>
        </div>
        {{ form_row(registrationForm.lastname,{'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.tel) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Je cr√©e mon compte</button>
    {{ form_end(registrationForm) }}
{% endblock %}
